            "post": {
                "tags": [
                    "Merchants"
                ],
                "summary": "Approval / Reject Merchant",
                "description": "Acepta o rechaza un merchant",
                "operationId": "postMerchantApproval",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Merchant id",
                        "required": true,
                        "schema": {
