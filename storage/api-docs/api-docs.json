            "post": {
                "tags": [
                    "Merchants"
                ],
                "summary": "Get Merchant QR",
                "description": "Returns qr data",
                "operationId": "getMerchantQR",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Merchant id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
